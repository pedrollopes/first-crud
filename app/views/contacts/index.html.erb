<div class="form-style-9 index_list_contact">

  <script>
    $.notify("<%= notice %>","success")  
  </script>
  
  <h1><%= "#{t('messages.listing')}  #{@contacts.model_name.human(count: @contacts.count)}" %></h1>
  
  <table>
    <thead>
      <tr>
        <th><%= @contacts.human_attribute_name("name") %></th>
        <th><%= @contacts.human_attribute_name("email") %></th>
        <th><%= @contacts.human_attribute_name("kind") %></th>

        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.name %></td>
          <td><%= contact.email %></td>
          <td><%= contact.kind.description %></td>

          <td><%= link_to t('buttons.edit'), edit_contact_path(contact) %> </td>
          <td><%= link_to t('buttons.destroy'), contact, method: :delete, data: { confirm: t('messages.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= paginate @contacts %>
  <br>
   
  <%= link_to t('buttons.new'), new_contact_path, class: "button" %>
  <%= link_to t('buttons.back'), bemvindo_path, class: "button" %>
</div>